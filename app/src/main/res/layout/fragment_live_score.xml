<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            app:ms_alignLabels="false"
            app:ms_arrowSize="12dp"
            app:ms_hint="@string/date"
            app:ms_multiline="false" />

        <TextView
            android:id="@+id/premierText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:visibility="gone"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="@string/premier_league"
             />

        <ListView
            android:id="@+id/premierList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/premierText">
        </ListView>

        <TextView
            android:id="@+id/primeraText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/premierList"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="@string/primera_division" />

        <ListView
            android:id="@+id/primeraList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/primeraText"></ListView>

        <TextView
            android:id="@+id/seriaAText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/primeraList"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="@string/seria_a" />

        <ListView
            android:id="@+id/seriaAList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/seriaAText"></ListView>

        <TextView
            android:id="@+id/bundesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seriaAList"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="@string/bundesliga"/>

        <ListView
            android:id="@+id/bundesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/bundesText"></ListView>

        <TextView
            android:id="@+id/ligue1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bundesList"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="@string/ligue_1"/>

        <ListView
            android:id="@+id/ligue1List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/ligue1Text"></ListView>
    </LinearLayout>
</ScrollView>
